<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_message_send"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:gravity="right"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/read_indicator"
            android:layout_gravity="right|bottom"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_chat_unread_24dp" />

        <TextView
            android:id="@+id/text_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:layout_marginRight="4dp"
            android:text="11:40 10d"
            android:textSize="@dimen/text_time_chat"
            app:layout_constraintBottom_toBottomOf="@+id/text_message_body"
            app:layout_constraintRight_toLeftOf="@+id/text_message_body" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/list_teaching_rounded"
        android:maxWidth="240dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:text="hello, hello!"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_body_chat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>