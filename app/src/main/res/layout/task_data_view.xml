<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/layout_inbox_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_teaching_rounded"
        android:paddingLeft="14dp"
        android:paddingTop="14dp"
        android:paddingRight="16dp"
        android:paddingBottom="14dp">

        <LinearLayout
            android:id="@+id/layout_inbox_action"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/list_teaching_action_rounded"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="0.3">

                <ImageButton
                    android:id="@+id/btn_task_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_update_white_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_task_menu"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5" />

                <ImageButton
                    android:id="@+id/btn_task_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_cross_red_40dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_task_invite"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5" />

                <ImageButton
                    android:id="@+id/btn_task_invite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_insert_invitation_white_24dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mantul task fragment"
                android:textColor="@android:color/white"
                android:textDirection="rtl"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@android:color/white"
                    android:textDirection="rtl"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@android:color/white"
                    android:textDirection="rtl"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@android:color/white"
                    android:textDirection="rtl"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txt_notify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notify"
                    android:textColor="@android:color/white"
                    android:textDirection="rtl"
                    android:textSize="19sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>